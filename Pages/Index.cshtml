<!-- Appointment Start -->
<div id="contact"
     class="container-fluid appointment my-5 py-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.3s">
                <h1 class="display-6 text-white mb-5">
                    @Localizer.TextIgnoreCase("Ready to Start Your Career Discovery?")
                </h1>
                <p class="text-white mb-5">
                    @Localizer.TextIgnoreCase("Take the first step towards a fulfilling career. Register or log in to access our assessments. If you have questions, feel free to reach out using the form.")
                </p>
                <div class="bg-white rounded p-3">
                    <div class="d-flex align-items-center bg-primary rounded p-3">
                        <i class="fas fa-headset fa-2x me-3 text-light"></i>
                        <h5 class="text-white mb-0">@Localizer.TextIgnoreCase("Contact Support")</h5> @* Generic contact text *@
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="bg-white rounded p-5">
                    <form> @* This form might need backend logic later *@
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="gname"/>
                                    <label for="gname">@Localizer.TextIgnoreCase("Your Name")</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input
                                        type="email"
                                        class="form-control"
                                        id="gmail"/>
                                    <label for="gmail">@Localizer.TextIgnoreCase("Your Email")</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="cname"/>
                                    <label for="cname">@Localizer.TextIgnoreCase("Your Mobile")</label>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-floating">
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="cage"/> @* Consider changing ID if not relevant *@
                                    <label for="cage">@Localizer.TextIgnoreCase("Subject")</label> @* Changed label *@
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea
                                        class="form-control"
                                        id="message"
                                        style="height: 80px"
                                    ></textarea>
                                    <label for="message">@Localizer.TextIgnoreCase("Message")</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary py-3 px-5" type="submit">
                                    @Localizer.TextIgnoreCase("Send Message") @* Changed button text *@
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Appointment End -->