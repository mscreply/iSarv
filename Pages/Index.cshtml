@page
@model IndexModel
@{
    ViewData["Title"] = Localizer.TextIgnoreCase("Home page");
}

<!-- Carousel Start -->
<div class="content-en container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="img/carousel-1.jpg" alt="Image"/>
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <h1 class="display-3 text-dark mb-4 animated slideInDown">
                                    @Localizer.TextIgnoreCase("Discover Your Career Aptitude")
                                </h1>
                                <p class="fs-5 text-body mb-5">
                                    @Localizer.TextIgnoreCase("Find your ideal career path by taking validated psychological tests and AI analysis.")
                                </p>
                                <a href="/User/Dashboard" class="btn btn-primary py-3 px-5">
                                    @Localizer.TextIgnoreCase("Start Tests")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="img/carousel-2.jpg" alt="Image"/>
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <h1 class="display-3 text-dark mb-4 animated slideInDown">
                                    @Localizer.TextIgnoreCase("Build Your Career Future Intelligently")
                                </h1>
                                <p class="fs-5 text-body mb-5">
                                    @Localizer.TextIgnoreCase("Accurate and personalized analysis of test results using advanced artificial intelligence.")
                                </p>
                                <a href="#about" class="btn btn-primary py-3 px-5">
                                    @Localizer.TextIgnoreCase("Learn More")
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#header-carousel"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#header-carousel"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->

<!-- About Start -->
<div class="container-xxl py-5" id="about">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <div
                    class="position-relative overflow-hidden rounded ps-5 pt-5 h-100"
                    style="min-height: 400px">
                    <img
                        class="position-absolute w-100 h-100"
                        src="img/about.jpg"
                        alt=""
                        style="object-fit: cover"/>
                    <div
                        class="position-absolute top-0 start-0 bg-white rounded pe-3 pb-3"
                        style="width: 200px; height: 200px">
                        <div
                            class="d-flex flex-column justify-content-center text-center bg-primary rounded h-100 p-3">
                            <h1 class="text-white mb-0">25</h1>
                            <h2 class="text-white">@Localizer.TextIgnoreCase("Years")</h2>
                            <h5 class="text-white mb-0">@Localizer.TextIgnoreCase("Experience")</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="h-100">
                    <h1 class="display-6 mb-5">
                        @Localizer.TextIgnoreCase("Understand Your Strengths for the Right Career")
                    </h1>
                    <p class="fs-5 text-primary mb-4">
                        @Localizer.TextIgnoreCase("Our platform uses scientifically validated tests and AI to provide deep insights into your professional potential.")
                    </p>
                    <div class="row g-4 mb-4">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <img
                                    class="flex-shrink-0 me-3"
                                    src="img/icon/icon-04-primary.png"
                                    alt=""/>
                                <h5 class="mb-0">@Localizer.TextIgnoreCase("Validated Psychometric Tests")</h5>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <img
                                    class="flex-shrink-0 me-3"
                                    src="img/icon/icon-02-primary.png"
                                    alt=""/>
                                <h5 class="mb-0">@Localizer.TextIgnoreCase("AI-Powered Analysis")</h5>
                            </div>
                        </div>
                    </div>
                    <p class="mb-4">
                        @Localizer.TextIgnoreCase("Gain clarity on your skills, personality traits, and interests to make informed decisions about your career path. Our AI analyzes your results to suggest suitable job roles and industries.")
                    </p>
                    <div class="border-top mt-4 pt-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-headset fa-2x text-primary me-3"></i>
                            <h5 class="mb-0">@Localizer.TextIgnoreCase("Contact Us for More Info")</h5> @* Generic contact text *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->

<!-- Facts Start -->
<div class="container-fluid overflow-hidden my-5 px-lg-0">
    <div class="container facts px-lg-0">
        <div class="row g-0 mx-lg-0">
            <div class="col-lg-6 facts-text wow fadeIn" data-wow-delay="0.1s">
                <div class="h-100 px-4 pe-lg-0">
                    <h1 class="text-white mb-4">@Localizer.TextIgnoreCase("Insights for Your Career Journey")</h1>
                    <p class="text-light mb-5">
                        @Localizer.TextIgnoreCase("Whether you are a student, a recent graduate, or a professional seeking change, our assessments provide valuable guidance for your next steps.")
                    </p>
                    <a href="#features" class="align-self-start btn btn-secondary py-3 px-5">
                        @Localizer.TextIgnoreCase("Discover Features")
                    </a
                    >
                </div>
            </div>
            <div class="col-lg-6 facts-counter wow fadeIn" data-wow-delay="0.5s">
                <div class="h-100 px-4 pe-lg-0">
                    <div class="row g-5">
                        <div class="col-sm-6">
                            <h1 class="display-5" data-toggle="counter-up">5000</h1> @* Example Number *@
                            <p class="fs-5 text-primary">@Localizer.TextIgnoreCase("Tests Completed")</p>
                        </div>
                        <div class="col-sm-6">
                            <h1 class="display-5" data-toggle="counter-up">95</h1> @* Example Percentage *@
                            <p class="fs-5 text-primary">@Localizer.TextIgnoreCase("User Satisfaction Rate")</p>
                        </div>
                        <div class="col-sm-6">
                            <h1 class="display-5" data-toggle="counter-up">10</h1> @* Example Number *@
                            <p class="fs-5 text-primary">@Localizer.TextIgnoreCase("Different Assessment Types")</p>
                        </div>
                        <div class="col-sm-6">
                            <h1 class="display-5" data-toggle="counter-up">2</h1> @* Example Number *@
                            <p class="fs-5 text-primary">@Localizer.TextIgnoreCase("AI Analysis Models")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Facts End -->

