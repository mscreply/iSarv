@using System.Globalization
@{ var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName; }
<!-- Footer Start -->
<div
    class="container-fluid footer mt-5 pt-5 wow fadeIn"
    data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h1 class="text-white mb-4">
                    <img class="img-fluid me-3 bg-light rounded p-2" src="/img/logo.png" alt=""/>
                </h1>
                <p>
                    @Localizer.TextIgnoreCase("Empowering individuals to make informed career decisions through AI-driven insights and personalized guidance.")
                </p>
                <div class="d-flex pt-2">
                    <a class="btn btn-square me-1" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="btn btn-square me-1" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="btn btn-square me-1" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                    <a class="btn btn-square me-0" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light mb-4">@Localizer.TextIgnoreCase("Address")</h5>
                <p>
                    <i class="fa fa-map-marker-alt me-3"></i>@Configuration[$"Site:Address-{lang}"]
                </p>
                <p><i class="fa fa-phone-alt me-3"></i><span class="d-inline-block content-en">@Configuration["Site:Phone"]</span></p>
                <p><i class="fa fa-envelope me-3"></i>@Configuration["Site:Email"]</p>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light text-center mb-4">@Localizer.TextIgnoreCase("Quick Links")</h5>
                <a class="btn btn-link" href="">@Localizer.TextIgnoreCase("About Us")</a>
                <a class="btn btn-link" href="">@Localizer.TextIgnoreCase("Contact Us")</a>
                <a class="btn btn-link" href="">@Localizer.TextIgnoreCase("Our Services")</a>
                <a class="btn btn-link" href="">@Localizer.TextIgnoreCase("Terms & Condition")</a>
                <a class="btn btn-link" href="">@Localizer.TextIgnoreCase("Support")</a>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-light mb-4">@Localizer.TextIgnoreCase("E-Trustseal")</h5>
                <div class="position-relative mx-auto" style="max-width: 400px">
                    <a referrerpolicy='origin' target='_blank' href='https://trustseal.enamad.ir/?id=631283&Code=S4ZC0eFdOgR5Qrz3B2LfpHxt8ySY9jiD'>
                        <img referrerpolicy='origin' src='https://trustseal.enamad.ir/logo.aspx?id=631283&Code=S4ZC0eFdOgR5Qrz3B2LfpHxt8ySY9jiD' alt='' style='cursor:pointer' code='S4ZC0eFdOgR5Qrz3B2LfpHxt8ySY9jiD'>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer End -->