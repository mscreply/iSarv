@page "{currentPage?}"
@model iSarv.Areas.User.Pages.UserListModel
@{
    ViewData["Title"] = Localizer.Text("User List");
}

<h1>@Localizer.Text("User List")</h1>

<form method="get">
    <div class="d-inline-flex">
        <div class="input-group">
            <label class="input-group-text" for="searchTerm">@Localizer.Text("Search")</label>
            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@Model.SearchTerm">
            <button type="submit" class="btn btn-success"><i class="fas fa-search"></i></button>
        </div>
        <a asp-page="./Create" class="btn btn-primary ms-2 flex-shrink-0">@Localizer.Text("Create New User")</a>
    </div>
</form>

<partial name="_ToastMessage" for="ToastMessage"/>

<table class="table">
    <thead>
    <tr>
        <th>@Localizer.Text("Email")</th>
        <th>@Localizer.Text("Full Name")</th>
        <th>@Localizer.Text("Phone Number")</th>
        <th>@Localizer.Text("Is Admin")</th>
        <th>@Localizer.Text("Is Active")</th>
        <th>@Localizer.Text("Actions")</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>
                <span class="@(user.EmailConfirmed ? "text-success" : "text-danger")">@user.Email</span>
                <form method="post" asp-page-handler="ToggleEmailConfirmed" asp-route-id="@user.Id"
                      asp-route-currentPage="@Model.CurrentPage"
                      style="display:inline;">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none;"
                            title="@Localizer.Text("Toggle Email Confirmed")">
                        @if (user.EmailConfirmed)
                        {
                            <i class="fas fa-envelope-circle-check text-success"></i>
                        }
                        else
                        {
                            <i class="far fa-envelope text-danger"></i>
                        }
                    </button>
                </form>
            </td>
            <td>@user.FullName</td>
            <td>
                <span class="@(user.PhoneNumberConfirmed ? "text-success" : "text-danger")">@user.PhoneNumber</span>
                <form method="post" asp-page-handler="TogglePhoneNumberConfirmed" asp-route-id="@user.Id"
                      asp-route-currentPage="@Model.CurrentPage"
                      style="display:inline;">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none;"
                            title="@Localizer.Text("Toggle Phone Number Confirmed")">
                        @if (user.PhoneNumberConfirmed)
                        {
                            <i class="fas fa-phone text-success"></i>
                        }
                        else
                        {
                            <i class="fas fa-phone-slash text-danger"></i>
                        }
                    </button>
                </form>
            </td>
            <td>
                @if (user.IsAdmin)
                {
                    <i class="fas fa-check"></i>
                }
                else
                {
                    <i class="fas fa-times"></i>
                }
            </td>
            <td>
                @if (user.IsActive)
                {
                    <i class="fas fa-check"></i>
                }
                else
                {
                    <i class="fas fa-times"></i>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@user.Id" title="@Localizer.Text("Edit")"><i class="fas fa-edit"></i></a>
                |
                <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id"
                      asp-route-currentPage="@Model.CurrentPage" style="display:inline;"
                      onsubmit="return confirm(@Localizer.Text("Are you sure you want to delete this user?"));">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none;"
                            title="@Localizer.Text("Delete")"><i class="fas fa-trash"></i></button>
                </form>
                |
                <form method="post" asp-page-handler="AssignAdmin" asp-route-id="@user.Id"
                      asp-route-currentPage="@Model.CurrentPage" style="display:inline;">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none;"
                            title="@Localizer.Text("Toggle Admin")"><i class="fas fa-user-shield"></i></button>
                </form>
                |
                <form method="post" asp-page-handler="ResetPassword" asp-route-id="@user.Id"
                      asp-route-currentPage="@Model.CurrentPage" style="display:inline;">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none;"
                            title="@Localizer.Text("Reset Password")"><i class="fas fa-key"></i></button>
                </form>
                |
                <form method="post" asp-page-handler="ToggleActive" asp-route-id="@user.Id"
                      asp-route-currentPage="@Model.CurrentPage" style="display:inline;">
                    <button type="submit" class="btn btn-link" style="padding:0; border:none;"
                            title="@Localizer.Text("Toggle Active")"><i class="fas fa-power-off"></i></button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav aria-label="User list pagination">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
            <a class="page-link" asp-page="./UserList" asp-route-currentPage="@(Model.CurrentPage - 1)"
               asp-area="User">@Localizer.Text("Previous")</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-page="./UserList" asp-route-currentPage="@(i.ToString())"
                   asp-area="User">@i</a>
            </li>
        }
        <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-page="./UserList" asp-route-currentPage="@(Model.CurrentPage + 1)"
               asp-area="User">@Localizer.Text("Next")</a>
        </li>
    </ul>
</nav>
