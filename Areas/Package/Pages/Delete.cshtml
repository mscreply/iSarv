}

<h1>@Localizer.TextIgnoreCase("Delete")</h1>

<h3>@Localizer.TextIgnoreCase("Are you sure you want to delete this?")</h3>
<div>
    <h4>@Localizer.TextIgnoreCase("TestPackage")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPackage.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPackage.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPackage.FinalResult)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPackage.FinalResult)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPackage.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPackage.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPackage.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPackage.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPackage.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPackage.Deadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestPackage.SubmitDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestPackage.SubmitDate)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="TestPackage.Id" />
        <input type="submit" value="@Localizer.TextIgnoreCase("Delete")" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">@Localizer.TextIgnoreCase("Back to List")</a>
    </form>
</div>
