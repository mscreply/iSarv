@page
@model iSarv.Areas.Package.Pages.EditModel

@{
    ViewData["Title"] = Localizer.TextIgnoreCase("Edit");
}

<h1>@Localizer.TextIgnoreCase("Edit")</h1>

<h4>@Localizer.TextIgnoreCase("TestPackage")</h4>
<hr/>
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TestPackageEdit.Id"/>
            
            <div class="row">
                <div class="col form-floating mb-3">
                    <input asp-for="TestPackageEdit.Name" class="form-control" placeholder="@Localizer.TextIgnoreCase("Name")" readonly/>
                    <label asp-for="TestPackageEdit.Name">@Localizer.TextIgnoreCase("Name")</label>
                    <span asp-validation-for="TestPackageEdit.Name" class="text-danger"></span>
                </div>
                <div class="col form-floating mb-3">
                    <select asp-for="TestPackageEdit.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                    <label asp-for="TestPackageEdit.UserId" class="control-label">@Localizer.TextIgnoreCase("User Id")</label>
                </div>
            </div>
            
            <hr/>
            <h4>@Localizer.TextIgnoreCase("Neo Test")</h4>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.NeoStartDate" class="form-control" type="date" id="neo-start-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="neo-start-date" id="neo-start-date-calendar"></span>
                        <label asp-for="TestPackageEdit.NeoStartDate" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.NeoStartDate" class="text-danger mb-3"></span>
                </div>
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.NeoDeadline" class="form-control col-md-6" type="date" id="neo-deadline-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="neo-deadline-date" id="neo-deadline-date-calendar"></span>
                        <label asp-for="TestPackageEdit.NeoDeadline" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.NeoDeadline" class="text-danger mb-3"></span>
                </div>
            </div>

            <hr/>
            <h4>@Localizer.TextIgnoreCase("Clifton Test")</h4>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.CliftonStartDate" class="form-control col-md-6" type="date" id="clifton-start-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="clifton-start-date" id="clifton-start-date-calendar"></span>
                        <label asp-for="TestPackageEdit.CliftonStartDate" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.CliftonStartDate" class="text-danger mb-3"></span>
                </div>
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.CliftonDeadline" class="form-control" type="date" id="clifton-deadline-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="clifton-deadline-date" id="clifton-deadline-date-calendar"></span>
                        <label asp-for="TestPackageEdit.CliftonDeadline" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.CliftonDeadline" class="text-danger mb-3"></span>
                </div>
            </div>
            
            <hr/>
            <h4>@Localizer.TextIgnoreCase("Holland Test")</h4>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.HollandStartDate" class="form-control col-md-6" type="date" id="holland-start-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="holland-start-date" id="holland-start-date-calendar"></span>
                        <label asp-for="TestPackageEdit.HollandStartDate" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.HollandStartDate" class="text-danger mb-3"></span>
                </div>
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.HollandDeadline" class="form-control" type="date" id="holland-deadline-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="holland-deadline-date" id="holland-deadline-date-calendar"></span>
                        <label asp-for="TestPackageEdit.HollandDeadline" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.HollandDeadline" class="text-danger mb-3"></span>
                </div>
            </div>
            
            <hr/>
            <h4>@Localizer.TextIgnoreCase("Raven Test")</h4>
            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.RavenStartDate" class="form-control col-md-6" type="date" id="raven-start-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="raven-start-date" id="raven-start-date-calendar"></span>
                        <label asp-for="TestPackageEdit.RavenStartDate" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.RavenStartDate" class="text-danger mb-3"></span>
                </div>
                <div class="col">
                    <div class="form-floating input-group mb-3">
                        <input asp-for="TestPackageEdit.RavenDeadline" class="form-control" type="date" id="raven-deadline-date"/>
                        <span class="input-group-text btn-j-calendar" calendar-for="raven-deadline-date" id="raven-deadline-date-calendar"></span>
                        <label asp-for="TestPackageEdit.RavenDeadline" class="form-label"></label>
                    </div>
                    <span asp-validation-for="TestPackageEdit.RavenDeadline" class="text-danger mb-3"></span>
                </div>
            </div>
            
            <div class="form-group">
                <input type="submit" value="@Localizer.TextIgnoreCase("Save")" class="btn btn-primary"/>
                <a asp-page="./Index" class="btn btn-secondary">@Localizer.TextIgnoreCase("Back to List")</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptPartial"/>
    <script src="/lib/jalali-date-picker/jalali-date-picker.js"></script>
}
