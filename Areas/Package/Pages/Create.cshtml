@page
@model iSarv.Areas.Package.Pages.CreateModel

@{
    ViewData["Title"] = Localizer.TextIgnoreCase("Create");
}

<h1>@Localizer.TextIgnoreCase("Create")</h1>

<h4>@Localizer.TextIgnoreCase("Test Package")</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="TestPackage.Name" class="form-control" placeholder="@Localizer.TextIgnoreCase("Name")" readonly/>
                <label asp-for="TestPackage.Name">@Localizer.TextIgnoreCase("Name")</label>
                <span asp-validation-for="TestPackage.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TestPackage.UserId" class="control-label">@Localizer.TextIgnoreCase("User Id")</label>
                <select asp-for="TestPackage.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-floating input-group mb-3">
                <input asp-for="TestPackage.StartDate" class="form-control" type="date" id="start-date"/>
                <span class="input-group-text btn-j-calendar" calendar-for="start-date"></span>
                <label asp-for="TestPackage.StartDate" class="form-label"></label>
                <span asp-validation-for="TestPackage.StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating input-group mb-3">
                <input asp-for="TestPackage.Deadline" class="form-control" type="date" id="deadline-date"/>
                <span class="input-group-text btn-j-calendar" calendar-for="deadline-date"></span>
                <label asp-for="TestPackage.Deadline" class="form-label"></label>
                <span asp-validation-for="TestPackage.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer.TextIgnoreCase("Create")" class="btn btn-primary"/>
                <a asp-page="Index" class="btn btn-secondary">@Localizer.TextIgnoreCase("Back to List")</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptPartial"/>
    <script src="/lib/jalali-date-picker/jalali-date-picker.js"></script>
}
