@page "{id:int}"
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model iSarv.Areas.Package.Pages.DetailsModel

@{
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    ViewData["Title"] = Localizer.TextIgnoreCase("Details");
}

<h1>@Localizer.TextIgnoreCase("Details") @Localizer.TextIgnoreCase(Model.TestPackage.Name)</h1>

<h4>
    @Model.TestPackage.User.FullName - @Model.TestPackage.StartDate.ToShortCultureDate(lang) : @Model.TestPackage.Deadline.ToShortCultureDate(lang)
    -
    @Localizer.TextIgnoreCase(Model.TestPackage.Status)
</h4>

<hr/>
<ul class="nav nav-tabs mb-3" id="resultTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="package-tab" data-bs-toggle="tab" data-bs-target="#package" type="button"
                role="tab" aria-controls="package" aria-selected="true">
            @Localizer.TextIgnoreCase("Final Result")
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="neo-tab" data-bs-toggle="tab" data-bs-target="#neo" type="button" role="tab"
                aria-controls="neo" aria-selected="false">
            @Localizer.TextIgnoreCase("Neo Test Result")
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="clifton-tab" data-bs-toggle="tab" data-bs-target="#clifton" type="button"
                role="tab" aria-controls="clifton" aria-selected="false">
            @Localizer.TextIgnoreCase("Clifton Test Result")
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="ravens-tab" data-bs-toggle="tab" data-bs-target="#ravens" type="button" role="tab"
                aria-controls="ravens" aria-selected="false">
            @Localizer.TextIgnoreCase("Ravens Test Result")
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="hollands-tab" data-bs-toggle="tab" data-bs-target="#hollands" type="button"
                role="tab" aria-controls="hollands" aria-selected="false">
            @Localizer.TextIgnoreCase("Hollands Test Result")
        </button>
    </li>
</ul>

<div class="tab-content" id="resultTabsContent">
    <div class="tab-pane fade show active" id="package" role="tabpanel" aria-labelledby="package-tab">
        <form method="post" asp-page-handler="EditPackageResult">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>@Localizer.TextIgnoreCase(Model.TestPackage.Status)</h5>
                <div>
                    <button type="submit" class="btn btn-primary">
                        @Localizer.TextIgnoreCase("Confirm")
                    </button>
                </div>
            </div>
            <div class="border rounded p-3">
                <textarea name="result" rows="20" class="form-control" asp-for="TestPackage.FinalResult"></textarea>
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="neo" role="tabpanel" aria-labelledby="neo-tab">
        <form method="post" asp-page-handler="EditNeoResult">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>
                    @Localizer.TextIgnoreCase(Model.TestPackage.NeoTest.Status)
                    <button type="submit" asp-page-handler="ResetNeoTest" class="btn btn-danger">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </h5>
                @if (!string.IsNullOrEmpty(Model.TestPackage.NeoTest.Response))
                {
                    <div>
                        <button type="submit" asp-page-handler="GetNeoResultFromAI" class="btn btn-success">
                            @Localizer.TextIgnoreCase("Get Result from AI")
                        </button>
                        <button type="submit" class="btn btn-primary">
                            @Localizer.TextIgnoreCase("Confirm")
                        </button>
                        @if (Model.TestPackage.NeoTest.IsCompleted)
                        {
                            <a href="/Test/Neo/Result/@Model.TestPackage.NeoTest.Id" class="btn btn-secondary"
                               target="_blank">
                                @Localizer.TextIgnoreCase("Result Details")
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="border rounded p-3">
                <textarea name="result" rows="20" class="form-control" asp-for="TestPackage.NeoTest.Result"></textarea>
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="clifton" role="tabpanel" aria-labelledby="clifton-tab">
        <form method="post" asp-page-handler="EditCliftonResult">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>
                    @Localizer.TextIgnoreCase(Model.TestPackage.CliftonTest.Status)
                    <button type="submit" asp-page-handler="ResetCliftonTest" class="btn btn-danger">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </h5>
                @if (!string.IsNullOrEmpty(Model.TestPackage.CliftonTest.Response))
                {
                    <div>
                        <button type="submit" asp-page-handler="GetCliftonResultFromAI" class="btn btn-success">
                            @Localizer.TextIgnoreCase("Get Result from AI")
                        </button>
                        <button type="submit" class="btn btn-primary">
                            @Localizer.TextIgnoreCase("Confirm")
                        </button>
                        @if (Model.TestPackage.CliftonTest.IsCompleted)
                        {
                            <a href="/Test/Clifton/Result/@Model.TestPackage.CliftonTest.Id" class="btn btn-secondary"
                               target="_blank">
                                @Localizer.TextIgnoreCase("Result Details")
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="border rounded p-3">
                <textarea name="result" rows="20" class="form-control"
                          asp-for="TestPackage.CliftonTest.Result"></textarea>
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="hollands" role="tabpanel" aria-labelledby="hollands-tab">
        <form method="post" asp-page-handler="EditHollandsResult">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>
                    @Localizer.TextIgnoreCase(Model.TestPackage.HollandsTest.Status)
                    <button type="submit" asp-page-handler="ResetHollandsTest" class="btn btn-danger">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </h5>
                @if (!string.IsNullOrEmpty(Model.TestPackage.HollandsTest.Response))
                {
                    <div>
                        <button type="submit" asp-page-handler="GetHollandsResultFromAI" class="btn btn-success">
                            @Localizer.TextIgnoreCase("Get Result from AI")
                        </button>
                        <button type="submit" class="btn btn-primary">
                            @Localizer.TextIgnoreCase("Confirm")
                        </button>
                        @if (Model.TestPackage.HollandsTest.IsCompleted)
                        {
                            <a href="/Test/Hollands/Result/@Model.TestPackage.HollandsTest.Id" class="btn btn-secondary"
                               target="_blank">
                                @Localizer.TextIgnoreCase("Result Details")
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="border rounded p-3">
                <textarea name="result" rows="20" class="form-control"
                          asp-for="TestPackage.HollandsTest.Result"></textarea>
            </div>
        </form>
    </div>
    <div class="tab-pane fade" id="ravens" role="tabpanel" aria-labelledby="ravens-tab">
        <form method="post" asp-page-handler="EditRavensResult">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5>
                    @Localizer.TextIgnoreCase(Model.TestPackage.RavensTest.Status)
                    <button type="submit" asp-page-handler="ResetRavensTest" class="btn btn-danger">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </h5>
                @if (!string.IsNullOrEmpty(Model.TestPackage.RavensTest.Response))
                {
                    <div>
                        <button type="submit" asp-page-handler="GetRavensResultFromAI" class="btn btn-success">
                            @Localizer.TextIgnoreCase("Get Result from AI")
                        </button>
                        <button type="submit" class="btn btn-primary">
                            @Localizer.TextIgnoreCase("Confirm")
                        </button>
                        @if (Model.TestPackage.RavensTest.IsCompleted)
                        {
                            <a href="/Test/Ravens/Result/@Model.TestPackage.RavensTest.Id" class="btn btn-secondary"
                               target="_blank">
                                @Localizer.TextIgnoreCase("Result Details")
                            </a>
                        }
                    </div>
                }
            </div>
            <div class="border rounded p-3">
                <textarea name="result" rows="20" class="form-control"
                          asp-for="TestPackage.RavensTest.Result"></textarea>
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-page="./Index" class="btn btn-secondary">@Localizer.TextIgnoreCase("Back to List")</a>
</div>

@if (!string.IsNullOrEmpty(Model.AiError))
{
    <div class="d-none">@Model.AiError</div>
}