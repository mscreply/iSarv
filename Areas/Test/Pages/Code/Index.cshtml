@page
@model iSarv.Areas.Test.Pages.Code.IndexModel

@{
    ViewData["Title"] = Localizer.TextIgnoreCase("Activation Codes List");
}

<h1>@ViewData["Title"]</h1>

<partial name="_ToastMessage" for="ToastMessage" />

<div class="d-inline-flex mb-3">
    <form asp-page-handler="LoadFromExcel" method="post" enctype="multipart/form-data">
        <div class="input-group">
            <input type="file" name="excelFile" class="form-control" accept=".xlsx, .xls">
            <button type="submit" class="btn btn-success">@Localizer.TextIgnoreCase("Load from Excel")</button>
        </div>
    </form>
    <a asp-page="Create" class="btn btn-primary ms-2 flex-shrink-0">@Localizer.TextIgnoreCase("Create New")</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivationCode[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivationCode[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivationCode[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivationCode[0].NationalId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ActivationCode) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
                @if (!string.IsNullOrEmpty(item.Email))
                {
                    <form method="post" asp-page-handler="SendEmail" asp-route-id="@item.Id" class="d-inline">
                        <button type="submit" class="btn btn-warning btn-sm"><i class="bi bi-envelope"></i></button>
                    </form>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
                @if (!string.IsNullOrEmpty(item.PhoneNumber))
                {
                    <form method="post" asp-page-handler="SendSms" asp-route-id="@item.Id" class="d-inline">
                        <button type="submit" class="btn btn-secondary btn-sm"><i class="bi bi-phone"></i></button>
                    </form>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NationalId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="bi bi-info-circle"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a> |
            </td>
        </tr>
}
    </tbody>
</table>
