@page "{testId:int}"
@model iSarv.Areas.Test.Pages.Holland.Result

@{
    ViewData["Title"] = Localizer.Text("Holland Result");
}

<h4>@ViewData["Title"]</h4>

<table class="table table-striped mt-4">
    <thead>
        <tr>
            <th>@Localizer.Text("Personality")</th>
            <th>@Localizer.Text("Score")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var score in Model.Score)
        {
            <tr>
                <td>@Localizer.TextIgnoreCase(score.Key.ToString())</td>
                <td>@score.Value</td>
            </tr>
        }
    </tbody>
</table>

<h5 class="mt-4">
    @Localizer.Text("Result")
    @if (!Model.HollandTest.IsConfirmed)
    {
        <span class="text-danger small">( @Localizer.TextIgnoreCase("This result was generated by AI and has not been reviewed and confirmed by Psychologist.") )</span>
    }
    @if (Model.HollandTest.Result == "Wait for AI")
    {
        <a href="javascript:window.location.reload(true)" class="btn btn-primary">@Localizer.Text("Get Result from AI")</a>
    }
</h5>
<p class="content-multiline">@Model.HollandTest.Result</p>

@if (!string.IsNullOrEmpty(Model.AIError))
{
    <div class="d-none">@Model.AIError</div>
}
